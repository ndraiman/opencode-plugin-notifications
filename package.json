{
  "name": "opencode-plugin-notification",
  "version": "0.1.0",
  "description": "Terminal notifications for OpenCode using iTerm2 escape sequences and terminal bell",
  "author": {
    "name": "Netanel",
    "email": "netanel@example.com"
  },
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bunx eslint src/",
    "format": "bunx prettier --write src/",
    "typecheck": "bunx tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/netanelgilad/opencode-plugin-notification"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src/version.ts"
  ],
  "dependencies": {
    "@opencode-ai/plugin": "1.0.85"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "bun-types": "latest",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "typescript-eslint": "^8.47.0",
    "vitest": "^3.2.4"
  }
}
